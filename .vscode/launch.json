    "version": "0.2.0",
    "configurations": [
        // Run `task devenv` before main.go and `task stopdev` after main.go
        {
            "name": "Dev",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "preLaunchTask": "devenv",
            "postDebugTask": "stopdevenv",
        },
        // Run main.go only. `task devenv` should be run manually
        {
            "name": "App",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
        },
    ]
}